      <DataSource
        Persistence="ProjectFile" />		
    </Rule.DataSource>
    <Rule.Categories>
      <Category
        Name="Libraries"
        DisplayName="Libraries" />
      <Category
        Name="Linking"
        DisplayName="Linking" />
